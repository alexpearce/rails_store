source 'http://rubygems.org'

# rails
gem 'rails', '3.0.7'

# mysql driver
# gem 'mysql2'
# postgresql driver
gem 'pg'

# Haml markup
gem 'haml'
# Haml generators
gem 'haml-rails'
# CSS framework
gem 'compass'

# markdown
gem 'rdiscount'

# attachments
gem 'paperclip', :git => 'git://github.com/thoughtbot/paperclip.git'
# uploading attachments to S3
gem 'aws-s3'

# acts as tree
gem 'acts_as_tree', :git => 'git://github.com/parasew/acts_as_tree.git'

# JSON
gem 'json'

# authentication
gem 'devise'

# search
gem 'texticle'

# deployment
gem 'capistrano'

group :test, :development do
  gem 'rspec-rails', '~> 2.3.0'
  gem 'cucumber-rails'
  gem 'webrat'
  gem 'factory_girl_rails'
  gem 'autotest'
  gem 'launchy'
end