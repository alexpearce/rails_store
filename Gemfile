  gem 'rspec-rails', '~> 2.0.1'
  gem 'cucumber-rails'
  # http://groups.google.com/group/webrat/browse_thread/thread/fb5ff3fccd97f3df
  gem 'webrat', '=> 0.7.2.beta.2', :git => 'git://github.com/orangewise/webrat.git'
  gem 'factory_girl_rails'
  gem 'autotest'
end