- clss = ''

= render :partial => 'shared/page_navigation', :collection => nav_collection, :as => :page

- unless basket.line_items.count.zero?
	%li
		- clss = 'current' if controller.controller_name == 'baskets'
		= link_to 'Basket', basket_path(basket), :class => clss
		

- if admin_signed_in?
	%li
		=link_to '[Pages]', pages_path
/
	%li.search
		= form_tag search_items_path, :method => 'post' do
			= text_field_tag :search, params[:search]