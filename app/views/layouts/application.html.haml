!!!
%html
	%head
		%meta{:charset => 'utf-8'}
	
		%title
			=content_for?(:title) ? yield(:title) + ' | ' : ''
			=t :store_name, :scope => 'views.application'

		= stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
		
		= csrf_meta_tag
		
		= javascript_include_tag 'modernizr'
	%body
	
		.wrap

			%header
				%h1
					=t :store_name, :scope => 'views.application'
			
				%nav
					%ul
						=render :partial => 'layouts/navigation',
							:collection => nav_collection,
							:as => :page
						- if admin_signed_in?
							%li
								=link_to '[Pages]', pages_path
						%li.search
							= form_tag search_items_path, :method => 'post' do
								= text_field_tag :search, params[:search]

			#container
		
				=render 'layouts/sidebar'
		
				.main
			
					- flash.each do |key, msg|
						%div{:id => key}
							=msg
			
					=yield

		%footer
			%span
				=t :store_owner, :scope => 'views.application'
				&copy;
				= Time.now.year
			%span.right
				- if admin_signed_in?
					= link_to 'Logout', destroy_admin_session_path
				- else
					= link_to 'Login',  new_admin_session_path
			
		= javascript_include_tag 'jquery', 'rails', 'jquery.fancybox', 'jquery.color', 'application'