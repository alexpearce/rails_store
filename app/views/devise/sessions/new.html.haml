= title 'Sign In'
= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'admin'} do |f|
  %div.field
    = f.label :email
    = f.text_field :email
  %div.field
    = f.label :password
    = f.password_field :password

  - if devise_mapping.rememberable?
    %div.field
      = f.check_box :remember_me
      = f.label :remember_me

  %div.actions
    = f.submit "Sign in"

= render :partial => "devise/shared/links"
