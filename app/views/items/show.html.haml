= title @item.name
		
.twocol
	.meta
		%a{:href => @item.image.url, :title => @item.name}
			%img{:src => @item.image.url(:thumb), :class => 'fancyBorder', :alt => @item.name}
		- unless @item.children.empty?
			%h2 Options
			.grid
				- @item.children.each do |c|
					.grid_item
						%a{:href => c.image.url, :title => c.name, :rel => 'option'}
							%img{:src => c.image.url(:option), :class => 'thumbShadow', :alt => c.name}
			.clearfix
					

	.bd
		:markdown
			#{@item.description}
			
		.categories
			= link_to 'Categories', categories_path, :class => 'hilighted'
			- @item.categories.each do |c|
				= link_to c.name, category_path(c)
			
		.twocol.hilight
			.meta
				- if admin_signed_in?
					= link_to 'Add Option', new_item_path(:parent_id => @item)
					|
					= link_to 'Edit', edit_item_path(@item)
					|
					= link_to 'Destroy', item_path(@item), :confirm => "Delete item '#{@item.name}'?", :method => :delete
			.bd.price
				= ntc @item.price
				
		= form_for [@basket, @line_item], :html => {:class => 'right'} do |f|
			.field
				- if @item.children.empty?
					= f.hidden_field :item_id
				- else
					= f.collection_select :item_id, @item.children, :id, :option_select, { :disabled => lambda{ |op| op.stock == 0 }, :include_blank => 'Choose an option'}
			.actions
				= f.submit 'Add to Basket' if @item.stock > 0
				= f.submit 'Sold Out', :disabled => 'disabled' if @item.stock == 0
		
		.clearfix